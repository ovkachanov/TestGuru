<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h3><%= link_to 'Test Guru', root_path %></h3>
    <% if user_signed_in? %>
      <p class="nav user">
        <%= t('.welcome', user_name: current_user.first_name) %> |
        <%= link_to t('.log_out'), destroy_user_session_path, data: { method: :delete } %>
      </p>
    <% else %>
      <p class="nav user">
        <%= link_to t('.sign_up'), user_session_path %> |
        <%= link_to t('.log_in'), new_user_session_path %>
      </p>
    <% end %>

    <%= render 'shared/flash' %>
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
