<h2><%= t('.header') %></h2>

<%= link_to t('.new_test'), new_admin_test_path, class: 'badge badge-success' %>
<%= link_to t('.new_badge'), new_admin_badge_path, class: 'badge badge-primary' %>
<%= link_to t('.new_category'), new_admin_category_path, class: 'badge badge-warning' %>

<%= render 'shared/errors', resource: @test %>

<table class="table">
  <tr>
    <th class="sort-by-title pointer">
      <%= t('.title') %>
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
    <th><%= t('.level') %></th>
    <th><%= t('.questions') %></th>
    <th><%= t('.category') %></th>
    <th><%= t('.test_id') %></th>
    <th><%= t('.completed') %></th>
    <th colspan="3"><%= t('.actions') %></th>
  </tr>

  <%= render @tests %>
</table>
