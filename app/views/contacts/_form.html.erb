<%= form_for @contact, :html => {:class => "form-horizontal center"} do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :message, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_area :message, as: :text, class: "form-control" %>
    </div>
  </div>

  <%= f.submit t('.submit'), class: 'btn btn-success'%>
<% end %>
